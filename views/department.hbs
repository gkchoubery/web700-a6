<div class="row">
    {{#if department}}
    <div class="col-md-12"><br>
        <h2>{{department.departmentName}} - Department: {{department.departmentId}}</h2>
        <hr />
        <form>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label for="departmentName">Department Name</label>
                        <input class="form-control" id="departmentName" name="departmentName" type="text" readonly
                            value="{{department.departmentName}}" />
                    </div>
                </div>
            </div>
            <hr />
        </form>
    </div>
    {{else}}
    <div class="col-md-12 text-center pt-5">
        <strong>{{message}}</strong>
    </div>
    {{/if}}
</div>